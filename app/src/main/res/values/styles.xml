<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyOwntheme" parent="MyOwntheme.Base">
        <item name="colorPrimaryDark">@color/kcs_tone_bule</item>
    </style>

    <style name="MyOwntheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/kcs_tone_bule</item>
        <item name="colorControlNormal">@color/kcs_tone_bule</item>
        <item name="colorControlActivated">@color/kcs_tone_green</item>
        <item name="colorControlHighlight">@color/kcs_tone_green</item>

    </style>


    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupBackground">#ffffff</item>
    </style>


</resources>
